<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="494.0" prefWidth="816.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SampleController">
   <top>
      <Label prefHeight="38.0" prefWidth="74.0" text="Hola mundo" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox alignment="CENTER" maxWidth="300.0" prefHeight="376.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Introduce un mensaje" />
            <TextField fx:id="txtMensaje" alignment="CENTER" maxWidth="-Infinity" onAction="#mostrarMensaje" prefHeight="34.0" prefWidth="236.0">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="btnMensaje" alignment="CENTER" mnemonicParsing="false" onAction="#enviarMensaje" prefHeight="38.0" prefWidth="150.0" text="Enviar" />
            <Label fx:id="lblMensaje" prefHeight="18.0" prefWidth="111.0" textFill="RED">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>
